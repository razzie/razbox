<div style="clear: both">
	<div style="float: right">
		<a href="/x/{{.Folder}}/{{.Filename}}?download">&#8681; Download</a> |
		<a href="/x/{{.Folder}}">Go back &#10548;</a>
	</div>
</div>
<table id="entries" class="first20">
	<style type="text/css" scoped>
		table {
			width: 100%;
		}
		@media screen and (min-width: 1200px) {
			td {
				min-width: 80px;
			}
		}
    </style>
    <tr>
        <td>Name</td>
        <td>Size</td>
        <td>Modified</td>
    </tr>
	{{$Folder := .Folder}}
	{{$Filename := .Filename}}
    {{range .Entries}}
        <tr>
            <td><a href="/archive/{{$Folder}}/{{$Filename}}?download={{.Name}}">{{.Name}}</a></td>
            <td>{{ByteCountSI .Size}}</td>
            <td>{{.Modified.Format "Mon, 02 Jan 2006 15:04:05 MST"}}</td>
        </tr>
    {{end}}
</table>